<p id="notice"><%= notice %></p>

<h1><%= current_user.username %> Workouts</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Type of exercise</th>
      <th>Minutes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= workout.date %></td>
        <td><%= workout.type_of_exercise %></td>
        <td><%= workout.minutes %></td>
        <td><%= link_to 'Show', workout %></td>
        <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
        <td><%= link_to 'Destroy', workout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Workout', new_workout_path %>
